<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/chat_msg_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="1.5dp">

        <TextView
            android:id="@+id/chat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="1.5dp"
            android:ellipsize="end"
            android:gravity="start|center_vertical"
            android:lines="1"
            android:minWidth="30dp"
            android:textColor="#19BEF1"
            android:textSize="14sp" />

        <FrameLayout
            android:id="@+id/chat_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp">

            <LinearLayout
                android:id="@+id/chat_msg_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ViewAnimator
                    android:id="@+id/location_va"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/location_holder"
                        android:layout_width="260dp"
                        android:layout_height="180dp"
                        android:src="@drawable/image_holder" />

                    <com.google.android.gms.maps.MapView
                        android:id="@+id/location_map"
                        android:layout_width="260dp"
                        android:layout_height="180dp" />

                </ViewAnimator>

                <TextView
                    android:id="@+id/location_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/text_primary" />

                <TextView
                    android:id="@+id/location_sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/text_minor"
                    android:textSize="12sp" />

            </LinearLayout>

            <include layout="@layout/date_wrapper" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>