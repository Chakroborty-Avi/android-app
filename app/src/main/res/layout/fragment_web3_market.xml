<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bg_white">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <!-- This view will shrink and disappear -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:background="@drawable/bg_market_gradient" />

                <View
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/bg_market_gradient" />

                <View
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/bg_market_gradient" />

                <View
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/bg_chain_gradient" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- The view that stays at the top -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/bg_white"
            android:layout_marginBottom="20dp"
            app:layout_scrollFlags="enterAlways">

            <RadioGroup
                android:id="@+id/radio_group_collectibles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="start"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_inscription_radio"
                android:padding="1dp">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/radio_collectibles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:background="@drawable/ripple_half_circle_left"
                    android:drawableStart="@drawable/selector_market_favorites"
                    android:checked="true"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="4dp" />

                <View
                    android:background="?attr/nft_border"
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/radio_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:background="@drawable/ripple_half_circle_right"
                    android:drawableStart="@drawable/selector_market_rank"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="8dp" />

            </RadioGroup>

            <LinearLayout
                android:id="@+id/drop_sort"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_inscription_radio"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/drop_tv"
                    android:textColor="?attr/text_primary"
                    android:text="@string/Recent"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/sort_arrow"
                    android:src="@drawable/ic_sort_arrow_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <RelativeLayout
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/bg_window"
        android:orientation="vertical"
        android:padding="64dp"
        android:visibility="gone"
        app:layout_anchor="@id/app_bar_layout"
        app:layout_anchorGravity="bottom">

        <ImageView
            android:id="@+id/empty_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/empty_title"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_empty_watchlist" />

        <TextView
            android:id="@+id/empty_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:text="@string/watchlist_empty"
            android:textColor="?attr/text_assist"
            android:textSize="20sp" />

    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>