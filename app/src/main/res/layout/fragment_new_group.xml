<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <one.mixin.android.widget.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:need_divider="false"
        app:titleText="@string/group_new_title"/>

    <one.mixin.android.widget.AvatarView
        android:id="@+id/avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/title_view"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/participant_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin12"
        android:layout_below="@id/avatar"
        android:layout_centerHorizontal="true"
        android:textColor="@color/wallet_text_gray"/>

    <EditText
        android:id="@+id/name_et"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@id/participant_tv"
        android:layout_marginTop="40dp"
        android:paddingStart="@dimen/margin12"
        android:paddingEnd="@dimen/margin12"
        android:layout_marginStart="@dimen/margin20"
        android:layout_marginEnd="@dimen/margin20"
        android:background="@drawable/bg_landing_round_gray_4dp"
        android:hint="@string/group_new_name_tip"
        android:inputType="text"
        android:lines="1"
        android:textSize="16sp"/>

    <ViewAnimator
        android:id="@+id/create_animator"
        android:layout_width="116dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        android:enabled="false"
        android:inAnimation="@anim/fade_in"
        android:outAnimation="@anim/fade_out"
        android:background="@drawable/bg_gray_btn">

        <TextView
            android:id="@+id/create_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/create"
            android:textColor="@color/wallet_text_gray"/>

        <ProgressBar
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:theme="@style/AppTheme.WhiteAccent"/>
    </ViewAnimator>
</RelativeLayout>