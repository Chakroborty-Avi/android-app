<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <one.mixin.android.widget.SixLayout
        android:id="@+id/six"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:background="#8192F3"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/v2"
            android:layout_width="match_parent"
            android:background="#AE774F"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/v3"
            android:layout_width="match_parent"
            android:background="#F1F203"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/v4"
            android:layout_width="match_parent"
            android:background="#FA877E"
            android:layout_height="match_parent" />
    </one.mixin.android.widget.SixLayout>

</FrameLayout>