<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wallet_light_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <one.mixin.android.widget.TitleView
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:need_divider="false"
            app:titleText="@string/setting_title"/>

        <RelativeLayout
            android:id="@+id/blocked_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_contact_height"
            android:background="@android:color/white"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/blocked_tv"
                style="@style/NormalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin20"
                android:text="@string/setting_blocked"
                tools:ignore="RelativeOverlap"/>

            <TextView
                android:id="@+id/blocking_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin20"
                android:layout_alignParentEnd="true"
                android:text="@string/none"
                android:textColor="@color/text_gray"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/conversation_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_contact_height"
            android:layout_marginTop=".5dp"
            android:background="@android:color/white"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/conversation_tv"
                style="@style/NormalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin20"
                android:text="@string/setting_conversation"
                tools:ignore="RelativeOverlap"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/ic_shadow_bottom"/>

        <TextView
            style="@style/DescTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="@dimen/margin20"
            android:layout_marginStart="@dimen/margin20"
            android:text="@string/setting_privacy_tip"
            android:textSize="12sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/ic_shadow_top"/>

        <RelativeLayout
            android:id="@+id/backup_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_contact_height"
            android:layout_marginTop=".5dp"
            android:background="@android:color/white"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/backup_tv"
                style="@style/NormalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin20"
                android:text="@string/setting_backup"
                tools:ignore="RelativeOverlap"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/storage_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_contact_height"
            android:background="@android:color/white"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/storage_tv"
                style="@style/NormalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin20"
                android:text="@string/setting_storage"
                tools:ignore="RelativeOverlap"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/ic_shadow_divider"/>

        <RelativeLayout
            android:id="@+id/desktop_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_contact_height"
            android:background="@android:color/white"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/desktop_tv"
                style="@style/NormalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin20"
                android:text="@string/setting_desktop"
                tools:ignore="RelativeOverlap"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/ic_shadow_divider"/>

        <RelativeLayout
            android:id="@+id/auth_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_contact_height"
            android:layout_marginTop=".5dp"
            android:background="@android:color/white"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/auth_tv"
                style="@style/NormalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin20"
                android:text="@string/setting_authentications"
                tools:ignore="RelativeOverlap"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/ic_shadow_divider"/>

        <RelativeLayout
            android:id="@+id/about_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_contact_height"
            android:background="@android:color/white"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/about_tv"
                style="@style/NormalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin20"
                android:text="@string/about"
                tools:ignore="RelativeOverlap"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/ic_shadow_bottom"/>
    </LinearLayout>
</ScrollView>