<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">
    
    <one.mixin.android.widget.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/setting_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/privacy_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_contact_height"
                android:background="@color/colorPrimary"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/privacy_tv"
                    style="@style/NormalTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_black"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:text="@string/setting_privacy_security"
                    tools:ignore="RelativeOverlap"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/notification_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_contact_height"
                android:background="@color/colorPrimary"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/notification_tv"
                    style="@style/NormalTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_black"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:text="@string/notification"
                    tools:ignore="RelativeOverlap"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/backup_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_contact_height"
                android:background="@color/colorPrimary"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/backup_tv"
                    style="@style/NormalTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_black"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:text="@string/setting_backup"
                    tools:ignore="RelativeOverlap"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/storage_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_contact_height"
                android:background="@color/colorPrimary"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/storage_tv"
                    style="@style/NormalTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_black"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:text="@string/setting_data_storage"
                    tools:ignore="RelativeOverlap"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/language_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_contact_height"
                android:background="@color/colorPrimary"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/language_tv"
                    style="@style/NormalTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:text="@string/language"
                    tools:ignore="RelativeOverlap"/>

                <TextView
                    android:id="@+id/language_desc_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:textColor="@color/text_black"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_divider"
                android:background="@color/bg_gray"/>

            <RelativeLayout
                android:id="@+id/wallet_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_contact_height"
                android:background="@color/colorPrimary"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/wallet_tv"
                    style="@style/NormalTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_black"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:text="@string/wallet_title"
                    tools:ignore="RelativeOverlap"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_divider"
                android:background="@color/bg_gray"/>

            <RelativeLayout
                android:id="@+id/desktop_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_contact_height"
                android:background="@color/colorPrimary"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/desktop_tv"
                    style="@style/NormalTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_black"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:text="@string/setting_desktop"
                    tools:ignore="RelativeOverlap"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_divider"
                android:background="@color/bg_gray"/>

            <RelativeLayout
                android:id="@+id/about_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_contact_height"
                android:background="@color/colorPrimary"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/about_tv"
                    style="@style/NormalTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:textColor="@color/text_black"
                    android:text="@string/about"
                    tools:ignore="RelativeOverlap"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>