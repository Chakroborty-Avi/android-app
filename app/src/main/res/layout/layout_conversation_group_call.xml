<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="138dp"
    android:layout_height="48dp"
    android:layout_marginTop="10dp"
    android:layout_below="@id/bar_fl"
    android:layout_alignParentEnd="true"
    android:background="@drawable/bg_conversation_group_call">

    <FrameLayout
        android:id="@+id/icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_circle_70_solid_gray">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_menu_call"/>
    </FrameLayout>

    <Space
        android:id="@+id/center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/center"
        android:layout_marginStart="8dp"
        android:text="@string/group_call"
        android:textColor="?text_primary"
        android:layout_toEndOf="@id/icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/center"
        android:layout_toEndOf="@id/icon"
        android:layout_marginStart="8dp"
        android:textColor="?text_minor"
        android:text="@string/chat_tap_join"/>
</RelativeLayout>