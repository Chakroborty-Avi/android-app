<?xml version="1.0" encoding="utf-8"?>
<one.mixin.android.widget.PaddingRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">

    <ImageView
        android:id="@+id/favorite"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:padding="2dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_asset_favorites"
        android:background="@drawable/mixin_ripple_small" />

    <one.mixin.android.widget.CircleImageView
        android:layout_toEndOf="@id/favorite"
        android:layout_centerVertical="true"
        android:id="@+id/icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="6dp"
        android:src="@drawable/bot_default" />

    <TextView
        android:id="@+id/asset_name"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/text_primary"
        android:layout_toEndOf="@id/icon"
        android:layout_alignParentTop="true"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/asset_value"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/text_assist"
        android:layout_toEndOf="@id/icon"
        android:layout_below="@id/asset_name"
        android:fontFamily="@font/roboto_light"
        android:textSize="12sp"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/text_primary"
        android:fontFamily="@font/roboto_light"
        android:layout_toStartOf="@id/market"
        android:layout_marginEnd="24dp"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/market"
        android:layout_width="60dp"
        android:layout_height="34dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />

</one.mixin.android.widget.PaddingRelativeLayout>