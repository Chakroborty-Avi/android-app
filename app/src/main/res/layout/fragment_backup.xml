<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <one.mixin.android.widget.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:need_divider="false"
        app:titleText="@string/backup"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/wallet_light_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="42dp"
                    android:src="@drawable/ic_backup_logo"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:id="@+id/backup_des"
                    style="@style/NormalTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:layout_marginStart="@dimen/margin20"
                    android:layout_marginEnd="@dimen/margin20"
                    android:text="@string/backup_des"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@drawable/ic_shadow_divider"/>

            <RelativeLayout
                android:id="@+id/backup_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_contact_height"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/backup_now_tv"
                    style="@style/NormalTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin20"
                    android:text="@string/backup_now"
                    tools:ignore="RelativeOverlap"/>

                <ProgressBar
                    android:id="@+id/backup_pb"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:visibility="gone"
                    android:theme="@style/AppTheme.GrayProgress"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@drawable/ic_shadow_bottom"/>

            <TextView
                android:id="@+id/last_tv"
                style="@style/DescTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="@dimen/margin20"
                android:layout_marginEnd="@dimen/margin20"
                android:text="@string/backup_title"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@drawable/ic_shadow_top"/>

            <RelativeLayout
                android:id="@+id/auto_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_contact_height"
                android:clickable="true"
                android:focusable="true"
                android:background="@color/white"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/auto_tv"
                    style="@style/NormalTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin20"
                    android:text="@string/backup_auto"
                    tools:ignore="RelativeOverlap"/>

                <TextView
                    android:id="@+id/auto_desc_tv"
                    style="@style/DescTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin20"
                    tools:ignore="RelativeOverlap"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@drawable/ic_shadow_divider"/>

            <TextView
                android:id="@+id/delete_tv"
                style="@style/NormalTextStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_contact_height"
                android:text="@string/backup_delete"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/margin20"
                android:paddingEnd="@dimen/margin20"
                android:background="@color/white"
                android:foreground="?attr/selectableItemBackground"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@drawable/ic_shadow_bottom"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>